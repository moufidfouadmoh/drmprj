{% extends 'Print/base.html.twig' %}
{% block body %}
    <main class="mt-2 pt-2">
        <div class="container">
            <div class="row">
                <table class="table table-bordered" cellspacing="0" width="100%" role="grid" style="width: 100%;">
                    <thead>
                    <tr role="row">
                        <th>{{ 'app.cconsommation.table.fields.modele'|trans }}</th>
                        <th>{{ 'app.cconsommation.table.fields.owner'|trans }}</th>
                        <th>{{ 'app.cconsommation.table.fields.date.debut'|trans }}</th>
                        <th>{{ 'app.cconsommation.table.fields.date.fin'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for consommation in list %}
                        <tr role="row">
                            <td>{{ consommation.cmodele.nom }}</td>
                            <td>{{ consommation.user | nom_prenom }}</td>
                            <td>{{ consommation.datedebut | localizeddate('full', 'none', 'fr' ) | ucfirst }}</td>
                            <td>
                                {% if consommation.delaiaccorde %}
                                    {{ consommation.fin | localizeddate('full', 'none', 'fr' ) | ucfirst }}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}