{% extends 'Global/base.html.twig' %}
{% block styles %}
    <link rel="stylesheet" href="{{ asset('build/css/chosen.css') }}">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <h5 class="card-header light-blue lighten-1 white-text text-uppercase text-center">
                        <i class="lnr lnr-license"></i>
                        {{ 'app.ip.add'|trans }}
                    </h5>
                    {{ form_start(form, {
                        'attr':{
                            'class' : 'form form-horizontal form-bordered'
                        }
                    }) }}
                    <div class="card-content collpase show">
                        <div class="card-body px-lg-5 pt-0">
                            {% include 'Admin/Ip/includes/_form.html.twig' %}
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success btn-rounded mb-4 float-right">
                                {{ 'save.title'|trans }}
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script type="text/javascript" src="{{ asset('build/js/chosen.jquery.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ip_form_bureau').chosen({});
            $('#ip_form_agence').chosen({});
            $('#ip_form_user').chosen({});
        })
    </script>
{% endblock %}
