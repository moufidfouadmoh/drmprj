{% extends 'Print/base.html.twig' %}
{% block body %}
    <main class="mt-2 pt-2">
        <div class="container">
            <div class="row">
            <table class="table table-bordered" cellspacing="0" width="100%" role="grid" style="width: 100%;">
                <thead>
                <tr role="row">
                    <th>{{ 'app.ip.table.fields.address'|trans }}</th>
                    <th>{{ 'app.ip.table.fields.agence'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for ip in list %}
                    <tr role="row">
                        <td>{{ ip.nom }}</td>
                        <td>
                            {% if ip.agences is not empty %}
                                {% for agence in ip.agences %}
                                    {{ agence.nom }}{% if not loop.last %},{% endif %}
                                {% endfor %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
    </main>
{% endblock %}