                        <div class="card-footer">
                            <button class="btn btn-success btn-rounded mb-4 float-right">
                                {{ 'save.title'|trans }}
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
