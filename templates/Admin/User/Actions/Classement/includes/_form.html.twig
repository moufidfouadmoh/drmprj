<div class="form-row">
    <div class="col">
        <div class="form-group">
            {{ form_label(form.groupe) }}
            <br>
            {% for child in form.groupe %}
                <div class="custom-control custom-radio custom-control-inline">
                    {{ form_widget(child, { 'attr': {'class': 'custom-control-input'}}) }}
                    {{ form_label(child,null,{
                        'label_attr' : {
                            'class' : 'custom-control-label'
                        }
                    }) }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            {{ form_label(form.niveau,null,{
                'label_attr':{
                    'class':'label-control'
                }
            }) }}
            {{ form_widget(form.niveau,{
                'attr' : {
                    'class':'form-control',
                    'min' : 1,
                    'max' : 8
                }
            }) }}
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            {{ form_label(form.echelon,null,{
                'label_attr':{
                    'class':'label-control'
                }
            }) }}
            {{ form_widget(form.echelon,{
                'attr' : {
                    'class':'form-control',
                    'min' : 1,
                    'max' : 8
                }
            }) }}
        </div>
    </div>
</div>
<hr>
<div class="form-row">
    <div class="col">
        <div class="md-form">
            {{ form_widget(form.date,{
                'attr' : {
                    'class' : 'form-control',
                    'autocomplete' : 'off'
                }
            }) }}
            {{ form_label(form.date) }}
        </div>
    </div>
</div>
<hr>
<div class="form-row">
    <div class="col">
        <div class="form-group">
            {{ form_label(form.detail) }}
            {{ form_widget(form.detail) }}
        </div>
    </div>
</div>




