{% extends 'Global/base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="offset-2 col-8">
                <div class="card">
                    <h5 class="card-header light-blue lighten-1 white-text text-uppercase text-center">
                        <i class="lnr lnr-license"></i>
                        {{ 'password.change.title'|trans({},'security') }}
                    </h5>
                    <div class="card-content collpase show">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>{{ message }}</strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                        {{ form_start(form, { 'action': path('security_password'), 'attr': {
                            'class' : 'form form-horizontal form-bordered'
                        } }) }}
                        <div class="card-body px-lg-5 pt-0">
                            <div class="form-row">
                                <div class="col">
                                    <div class="md-form">
                                        {{ form_widget(form.oldPassword,{
                                            'attr' : {
                                                'class' : 'form-control'
                                            }
                                        }) }}
                                        {{ form_label(form.oldPassword) }}
                                        <small class="form-text text-muted text-danger mb-4">
                                            {{ form_errors(form.oldPassword) }}
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <div class="md-form">
                                        {{ form_widget(form.newPassword.first,{
                                            'attr' : {
                                                'class' : 'form-control'
                                            }
                                        }) }}
                                        {{ form_label(form.newPassword.first) }}
                                        <small class="form-text text-muted text-danger mb-4">
                                            {{ form_errors(form.newPassword.first) }}
                                        </small>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="md-form">
                                        {{ form_widget(form.newPassword.second,{
                                            'attr' : {
                                                'class' : 'form-control'
                                            }
                                        }) }}
                                        {{ form_label(form.newPassword.second) }}
                                        <small class="form-text text-muted text-danger mb-4">
                                            {{ form_errors(form.newPassword.second) }}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success btn-rounded mb-4 float-right">
                                {{ 'save.title'|trans({},'messages') }}
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
